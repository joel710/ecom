generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  phone     String?
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String
  price       Int
  category    String
  stock       Int
  imageUrl    String
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id        String      @id @default(uuid())
  userId    String?     // Nullable for Guest orders
  guestId   String?     // Identifier for guest users
  user      User?       @relation(fields: [userId], references: [id])
  total     Int
  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  items     OrderItem[]
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Int
}

model Event {
  id        String   @id @default(uuid())
  guestId   String
  userId    String?
  type      String   // PAGE_VIEW, ADD_TO_CART, SEARCH, etc.
  payload   Json?    // Flexible data, easy to send to Kafka later
  url       String?
  userAgent String?
  createdAt DateTime @default(now())
}

model StoreConfig {
  id                            String  @id @default("default")
  storeName                     String  @default("Lumi Store")
  contactEmail                  String  @default("contact@lumi.store")
  contactPhone                  String  @default("+225 07 00 00 00 00")
  currency                      String  @default("FCFA")
  whatsappNumber                String  @default("+225 07 00 00 00 00")
  whatsappNotificationsEnabled Boolean @default(true)
  kafkaUrl                      String?
  whatsappApiKey                String?
  updatedAt                     DateTime @updatedAt
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  icon      String   @default("ðŸ“¦")
  createdAt DateTime @default(now())
}
